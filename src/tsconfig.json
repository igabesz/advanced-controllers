{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
		"lib": ["es5", "es2015.promise"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "../lib"
    },
    "filesGlob": [
        "../typings/main.d.ts",
        "./*.ts"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
